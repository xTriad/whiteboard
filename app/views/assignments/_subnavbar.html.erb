<li>
  <%= link_to 'Assignments', assignments_path %>
  <span class="arrow">
    <span></span>
  </span>
</li>

<% if !@course.nil? %>
  <li>
    <%= link_to @course.name, assignments_path(:course => @course.course_id) %>
    <span class="arrow">
      <span></span>
    </span>
  </li>

  <% if params[:action] != 'new' %>

    <% if !@assignment.nil? %>
      <li>
        <%= link_to @assignment.get_name, assignment_path(@assignment) %>
        <span class="arrow">
          <span></span>
        </span>
      </li>
    <% end %>

    <% if params[:action] == 'edit' %>

      <li>
        <%= link_to 'Edit', edit_assignment_path(@assignment) %>
        <span class="arrow">
          <span></span>
        </span>
      </li>

    <% elsif params[:action] == 'files' %>

      <li>
        <%= link_to 'Files', files_assignment_path(@assignment) %>
        <span class="arrow">
          <span></span>
        </span>
      </li>
    <% end %>

  <% else %>

    <li>
      <%= link_to 'New', new_assignment_path(:section => @section_id) %>
      <span class="arrow">
        <span></span>
      </span>
    </li>
  <% end %>

<% end %>