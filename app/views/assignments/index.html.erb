<h1>Listing assignments</h1>

<table>
  <tr>
    <th>Type</th>
    <th>Section</th>
    <th>Due date</th>
    <th>Highest grade value</th>
    <th>Weight</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @assignments.each do |assignment| %>
  <tr>
    <td><%= assignment.type_id %></td>
    <td><%= assignment.section_id %></td>
    <td><%= assignment.due_date %></td>
    <td><%= assignment.highest_grade_value %></td>
    <td><%= assignment.weight %></td>
    <td><%= link_to 'Show', assignment %></td>
    <td><%= link_to 'Edit', edit_assignment_path(assignment) %></td>
    <td><%= link_to 'Destroy', assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

