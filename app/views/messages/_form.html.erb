<%= simple_form_for(@message) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.hidden_field :sender_id, :value => current_user.user_id %>
    <%= label_tag(:receiver_id, "Name") %>
    <%= text_field_tag(:receiver_id) %>
    <%= f.input :subject %>
    <%= f.input :message %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
