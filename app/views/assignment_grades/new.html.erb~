<h1>Add a New Grade</h1>

<%=form_for @assignment_grade do |f|%>

  <%if @assignment_grade.errors.any? %>
     <h2>Error</h2>
     <ul>
       <% @assignment_grade.errors.full_messages.each do |message|%>
           <li><%=message%></li>

       <%end%>

     </ul>
  <%end%>

  <%@current_user ||= session[:current_user_id]&&User.find_by_id(session[:current_user_id])%>

  <%@current_section ||= session[:current_section_id]&&User.find_by_id(session[:current_section_id])%>


  <%assignments = Assignment.where(:section_id=>@current_section)%>
  <p>
    <%=f.label :Assignment%><br/>
    <%=options_for_select(assignments)%>

  </p>

  <p>
    <%=f.label :Student%><br/>
    <%=f.text_field :user_name%>

  </p>

  <p>
    <%=f.label :Points%><br/>
    <%=f.text_field :grade_value%>

  </p>

  <p>
    <%=f.label :Comment%><br/>
    <%=f.text_area :comment%>

  </p>

  <p>
    <%=f.submit "Add a Grade"%>

  </p>


<%end%>
