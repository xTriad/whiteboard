<h1>Add a New Grade</h1>

<%=form_for @grade do |f|%>

  <%if @grade.errors.any? %>
     <h2>Error</h2>
     <ul>
       <% @grade.errors.full_messages.each do |message|%>
           <li><%=message%></li>

       <%end%>

     </ul>
  <%end%>
  <p>
    <%=f.label :name%><br/>
    <%=f.text_field :name%>

  </p>

  <p>
    <%=f.label :grade%><br/>
    <%=f.text_field :grade%>

  </p>

  <p>
    <%=f.label :pointsposs%><br/>
    <%=f.text_field :pointsposs%>

  </p>

    <p>
    <%=f.label :comment%><br/>
    <%=f.text_area :comment%>

  </p>

  <p>
    <%=f.submit "Add a Grade"%>

  </p>



<%end%>
